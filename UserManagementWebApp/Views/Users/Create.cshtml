@model UserManagementWebApp.Models.User

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="userDataForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Repeat password</label>
                <input type="password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Sex)
                @Html.DropDownListFor(m => m.Sex, Model.Sexes, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
            </div>
            <div class="form-group shadow-textarea">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control z-depth-1" rows="7" placeholder="Write user description here..."></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success btn-block" />
            </div>
        </form>

        <div>
            <a class="btn btn-info btn-block" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
